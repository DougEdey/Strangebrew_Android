<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:spinnerStyle">@style/unit_spinner</item>
    </style>

    <style name="unit_spinner" parent="@android:style/Widget.Holo.DropDownItem.Spinner">

        <item name="android:clickable">true</item>
        <item name="android:textSize">6sp</item>
        <item name="android:textColor">#959494</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">1dip</item>
        <item name="android:paddingBottom">1dip</item>
        <item name="android:paddingRight">1dip</item>
        <item name="android:paddingLeft">1dip</item>
    </style>
</resources>
